<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="ua.com.valdzx.car.terminal.MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:id="@+id/scanIndicator">
        <TextView
                android:text="Scanning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connectionState" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pinState" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/scanIndicator" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:enabled="false" android:checked="false"/>
    <Button
            android:text="@string/turn_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/changePin" app:layout_constraintStart_toEndOf="@+id/pinState"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/pinState"
            app:layout_constraintBottom_toBottomOf="@+id/pinState"/>
</android.support.constraint.ConstraintLayout>
